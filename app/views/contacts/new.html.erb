<h1 id="page_title">Say Hello!</h1>

<div class="wrapper_padding skinny_wrapper">
<%= form_for @contact do |f| %>
    <%= f.label :name %> <br />
    <%= f.text_field :name, required: true %>

    <br/>

    <%= f.label :email %> <br />
    <%= f.text_field :email, required: true %>

    <br/>

     <%= f.label :message %> <br />
     <%= f.text_field :message, as: :text %>

     <div class="hidden">
       <%= f.label :nickname %> <br />
      <%= f.text_field :nickname, hint: 'leave thid field blank' %>

      </div>

      <%= f.submit 'Send Measage', class: "button" %>




    <% end %>


